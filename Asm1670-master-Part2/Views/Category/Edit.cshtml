@model Asm1670.Models.Category

<div class="container col-md-6 text-center mt-3">
    <form class="card p-3 bg-light" asp-controller="Category" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <h3 class="text text-primary">Edit Category</h3>
        <div class="form-group">
            <label asp-for="CategoryName" class="text text-success"></label>
            <input asp-for="CategoryName" class="form-control"/>
            <span asp-validation-for="CategoryName" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit" />
        </div>
    </form>
</div>