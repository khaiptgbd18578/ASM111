@model ICollection<Category>

<div class="container col-md-6 text-center mt-3">
@if (@TempData["Message"] != null) {
  <p class="alert alert-danger">@TempData["Message"]</p>
}
<table class="table table-bordered">
    <tr>
        <th colspan="3" class="h3 bg-light text-success">Category List</th>
    </tr>
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Action</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>
                <a class="" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">
                    @category.CategoryName
                </a>
            </td>
            <td>
                <a class="" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                    Edit
                </a>
                <a class="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
               onclick="    return confirm('Are you sure to delete this Category ?');">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
</div>
